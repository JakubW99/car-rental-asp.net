@model car_rental_asp.net.Models.CarRental

<div hidden class="amount">@Convert.ToDouble(Model.Car.Amount).ToString()</div>
<div class="container">
<h4>Rent this car</h4>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form class="rent-form" asp-action="Post">
             <div class="form-group">@Model.Car.Brand</div>
             <div class="form-group">@Model.Car.Model</div>
             <div class="form-group">@Model.Car.Specification</div>
             <div class="form-group">@Model.Car.Amount PLN/Day</div>
             <div class="form-group">
                <img src="~/images/@Model.Car.Image"
                     class="image"
                     asp-append-version="true" />
            </div>
           
         <div class="form-group">
                <label asp-for="StartDate"  class="control-label"></label>
                <input asp-for="StartDate" id="start"  class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndDate"  class="control-label"></label>
                <input asp-for="EndDate" id="end" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
                 <div class="total-price">
            <span>Total price: </span>            
        </div>

          <div class="form-group">
                <input type="submit" value="Submit" class="button-40" />
                </br>
            </div>
        </form>
    </div>
</div>

<div>
    <a class="" asp-action="Index">Back to List</a>
</div>
</div>
<script>

</script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
